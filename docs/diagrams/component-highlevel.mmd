%% Component diagram (high-level) for FastFood

graph LR
  subgraph Clients[Clients]
    Mobile["Mobile App\n(Homepage, Menu, Cart, Profile)"]
    Web["Web App\n(Menu, Product, Checkout)"]
  end

  subgraph Frontend[Frontend Components]
    UI["UI Components\n(ProductCard, CategoryList, FloatingCart)"]
    Nav["Navigation (Tabs/Stacks)"]
    Context["Contexts & Hooks\n(CartContext, AuthContext, useMenu)"]
  end

  subgraph Services[Service Layer]
    ProductSvc["ProductService"]
    CheckoutSvc["CheckoutService"]
    AuthSvc["AuthService"]
    CartSvc["CartService"]
  end

  subgraph Data[Data Layer]
    Supabase["SupabaseClient\n(Postgres/Auth/Storage)"]
  end

  Mobile --> UI
  Web --> UI
  UI --> Context
  Context --> ProductSvc
  Context --> CartSvc
  Context --> AuthSvc
  ProductSvc --> Supabase
  CheckoutSvc --> Supabase
  AuthSvc --> Supabase
  CartSvc --> Supabase

  classDef svc fill:#fff2e8,stroke:#ff8f43
  class ProductSvc,CheckoutSvc,AuthSvc,CartSvc svc
